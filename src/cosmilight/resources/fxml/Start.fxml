<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cosmilight.StartController">
   <root>
      <StackPane prefHeight="625.0" prefWidth="1250.0" style="-fx-background-color: #0E1118;">
         <children>
            <ImageView fitHeight="625.0" fitWidth="1250.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/bgTiles.png" />
               </image>
            </ImageView>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="400.0" prefWidth="800.0">
               <children>
                  <VBox alignment="CENTER">
                     <children>
                        <ImageView fitHeight="200.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/logo.png" />
                           </image>
                           <VBox.margin>
                              <Insets bottom="75.0" />
                           </VBox.margin>
                        </ImageView>
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" prefHeight="0.0" prefWidth="200.0" style="-fx-background-color: #333F50; -fx-text-fill: white; -fx-border-color: #222A35; -fx-border-width: 0 0 5 0;" text="Start">
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#openTutorial" prefHeight="0.0" prefWidth="200.0" style="-fx-background-color: #333F50; -fx-text-fill: white; -fx-border-color: #222A35; -fx-border-width: 0 0 5 0;" text="Tutorial">
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                           <VBox.margin>
                              <Insets bottom="5.0" top="5.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Button>
                        <HBox alignment="CENTER">
                           <children>
                              <ImageView fx:id="cheatsIcon" fitHeight="64.0" fitWidth="64.0" onMouseClicked="#toggleCheats" opacity="0.72" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../img/cheat_disabled.png" />
                                 </image>
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                 </HBox.margin>
                              </ImageView>
                              <ImageView fx:id="musicIcon" fitHeight="64.0" fitWidth="64.0" onMouseClicked="#toggleMusic" opacity="0.72" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../img/music_disabled.png" />
                                 </image>
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                 </HBox.margin>
                              </ImageView>
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </FlowPane>
         </children>
      </StackPane>
   </root>
</Scene>
